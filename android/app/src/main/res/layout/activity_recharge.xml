<?xml version="1.0" encoding="utf-8"?>
<cn.ztuo.customview.intercept.WonderfulScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_chongbi"
    tools:context="cn.ztuo.ui.recharge.RechargeActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryBackDark"
    android:gravity="center_horizontal"
    >
    <!--标题-->
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/primaryBackNormal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/icon_back_gray"
            android:visibility="visible"/>

        <View
            android:id="@+id/view_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="充币"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/ibRegist"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:minWidth="48dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvAddressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        android:text="Address"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>


        <ImageView
            android:id="@+id/ivAddress"
            android:layout_width="240dp"
            android:layout_marginTop="10dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llAlbum"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savePhoto"
            android:textColor="@color/text_orange"
            android:textSize="14sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvAddress"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAddress"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="ssssssss"
        android:textColor="@color/primaryText"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llCopy"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"

            android:text="@string/copyAddress"
            android:textColor="@color/text_orange"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="请勿向上述地址充值任何非币种资产，否则资产将不可找回。
您充值至上述地址后，需要整个网络节点的确认，2次网络确认后到账，6次网络确认后可提币。
最小充值金额：0.01币，小于最小金额的充值将不会上账。
您的充值地址不会经常改变，可以重复充值；如有更改，我们会尽量通过网站公告或邮件通知您。
请务必确认电脑及浏览器安全，防止信息被篡改或泄露"
        android:textSize="13sp"
        android:textColor="#777"
        android:lineSpacingMultiplier="1.4"
        />
</LinearLayout>
</cn.ztuo.customview.intercept.WonderfulScrollView>
